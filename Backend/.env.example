# Example environment variables for Google service account
# Preferred: store the base64 of the full JSON to avoid newline issues
# Export the service-account.json as base64 and set the variable:
#   $env:GOOGLE_SERVICE_ACCOUNT_BASE64 = [Convert]::ToBase64String([IO.File]::ReadAllBytes('service-account.json'))

# Option A (recommended): base64 of full JSON
GOOGLE_SERVICE_ACCOUNT_BASE64=

# Option B (fallback): individual fields. For private key, replace newlines with \n
GOOGLE_TYPE=service_account
GOOGLE_PROJECT_ID=your-project-id
GOOGLE_PRIVATE_KEY_ID=your-private-key-id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@your-project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=1234567890
GOOGLE_AUTH_URI=https://accounts.google.com/o/oauth2/auth
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
GOOGLE_AUTH_PROVIDER_X509_CERT_URL=https://www.googleapis.com/oauth2/v1/certs
GOOGLE_CLIENT_X509_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/your-service-account

# Other environment variables used by the backend
PORT=3001
NODE_ENV=development